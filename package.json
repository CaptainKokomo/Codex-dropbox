{
  "name": "nodelab",
  "version": "0.1.0",
  "description": "NodeLab â€“ drag-and-drop electronics sandbox with live simulation and coaching",
  "author": "NodeLab Team",
  "private": true,
  "main": "dist/main/index.js",
  "scripts": {
    "clean": "rimraf dist .vite",
    "typecheck": "tsc --project tsconfig.base.json --noEmit",
    "lint": "eslint \"{electron,renderer}/**/*.{ts,tsx}\" --max-warnings=0",
    "dev": "cross-env NODE_ENV=development npm-run-all -p dev:main dev:renderer",
    "dev:renderer": "cd renderer && vite",
    "dev:main": "wait-on tcp:5173 && electron .",
    "build": "npm-run-all clean build:renderer build:main",
    "build:renderer": "cd renderer && vite build",
    "build:main": "tsc --project electron/tsconfig.json",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@electron/remote": "^3.2.0",
    "clsx": "^2.0.0",
    "electron-store": "^8.1.0",
    "immer": "^10.0.3",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.4"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.9",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "wait-on": "^7.0.1"
  }
}
