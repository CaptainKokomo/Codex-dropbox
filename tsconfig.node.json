{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "composite": true,
    "moduleResolution": "node16",
    "outDir": "dist/electron",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "@/workers/*": ["src/workers/*"],
      "@/state/*": ["src/state/*"]
    }
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
